<?xml version="1.0" encoding="utf-8"?>
<inset android:inset="4.0dip"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ripple android:color="?colorControlHighlight">
        <item>
            <selector android:enterFadeDuration="200" android:exitFadeDuration="200">
                <item android:state_checked="true">
                    <shape>
                        <corners android:radius="8.0dip" />
                        <solid android:color="?messageListSelectionColor" />
                    </shape>
                </item>
                <item android:state_activated="true">
                    <shape>
                        <corners android:radius="8.0dip" />
                        <solid android:color="?selectActivatedColor" />
                    </shape>
                </item>
            </selector>
        </item>
        <item android:id="@android:id/mask">
            <shape>
                <corners android:radius="8.0dip" />
                <solid android:color="@android:color/white" />
            </shape>
        </item>
    </ripple>
</inset>